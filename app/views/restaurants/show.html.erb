<div class="container">
<h1><%= @restaurant.name %></h1><br>
<p>Address: <%= @restaurant.address %></p>
<p>Category: <%= @restaurant.category %></p>
<p>Phone: <%= @restaurant.phone_number %></p> <br>

<%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
<br>
<br>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, error: 'Rating from 0 to 5!' %>
  <%= f.submit class: 'btn btn-success'%> <%= link_to 'back', restaurant_path(@restaurant), class: 'btn btn-link' %>
<% end %><br>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %></li>
  <% end %>
</ul>

<%= link_to 'back', restaurants_path, class: 'btn btn-primary' %>
</div>
