<div class="container">
<h1><%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<p>Category: <%= @restaurant.category %></p>
<p>Phone: <%= @restaurant.phone_number %></p> <br>
<h3>Reviews</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %></li>
  <% end %>
</ul>
<br>
<h3>Submit a review</h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, error: 'Rating from 0 to 5!' %><br>
  <%= f.submit class: 'btn btn-success'%> <%= link_to 'back', restaurants_path(@restaurant), class: 'btn btn-primary' %>
<% end %><br>
</div>
